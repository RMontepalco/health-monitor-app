<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.HealthMonitorApp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="Health Monitor"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <!-- SplashScreen is displayed first, and then the LoginScreen is shown next -->
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterScreen" />
        <activity android:name=".MenuScreen" />
        <activity android:name=".LoginScreen"/>
    </application>

</manifest>